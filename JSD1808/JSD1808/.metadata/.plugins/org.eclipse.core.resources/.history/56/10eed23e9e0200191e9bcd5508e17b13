package cn.tedu.spring;

import org.springframework.stereotype.Controller;

/**
 * 
 * @author OldFarHigh
 *
 */
@Controller
public class HelloController {
	
	//处理请求的方法的声明（暂行标准）
	//1、使用public权限
	//2、使用String作为返回值类型
	//3、方法名称自定义
	//4、无参数
	public String showHello() {
		//测试输出
		System.out.println("HelloController.showHello()");
		//暂时不考虑返回值
		return null;
	}
	
}
